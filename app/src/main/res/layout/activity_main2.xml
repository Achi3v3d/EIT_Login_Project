<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/ER"
        android:layout_width="290dp"
        android:layout_height="58dp"
        android:layout_marginTop="128dp"
        android:background="#CA0000"
        android:text="ER"
        android:textColor="#B11010"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/EG"
        android:layout_width="290dp"
        android:layout_height="58dp"
        android:layout_marginTop="128dp"
        android:background="#4CAF50"
        android:text="EG"
        android:textColor="#4CAF50"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CPR"
        android:layout_width="290dp"
        android:layout_height="58dp"
        android:layout_marginTop="228dp"
        android:background="#CA0000"
        android:text="CPR"
        android:textColor="#CA0000"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CPG"
        android:layout_width="290dp"
        android:layout_height="58dp"
        android:layout_marginTop="228dp"
        android:background="#4CAF50"
        android:text="ER"
        android:textColor="#4CAF50"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/RPR"
        android:layout_width="290dp"
        android:layout_height="58dp"
        android:layout_marginTop="329dp"
        android:background="#CA0000"
        android:text="RPR"
        android:textColor="#B11010"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/RPG"
        android:layout_width="290dp"
        android:layout_height="58dp"
        android:layout_marginTop="329dp"
        android:background="#4CAF50"
        android:text="ER"
        android:textColor="#4CAF50"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"  />

    <EditText
        android:id="@+id/createPassword"
        android:layout_width="284dp"
        android:layout_height="51dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="textPassword"
        android:text="Password"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="292dp"
        android:layout_height="48dp"
        android:fontFamily="@font/museosans_300"
        android:text="Create Password"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.598"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="292dp"
        android:layout_height="48dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/museosans_300"
        android:text="Repeat Password"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="291dp"
        android:layout_height="43dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/museosans_300"
        android:text="Email Address"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="290dp"
        android:layout_height="63dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/museosans_300"
        android:text="Create an account"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="399dp"
        android:layout_height="142dp"
        android:layout_marginBottom="4dp"
        android:alpha=".4"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/gradientbuttonbackground" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="215dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/museosans_300"
        android:text="Next"
        android:textColor="#000000"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.79"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="296dp"
        android:layout_height="99dp"
        android:fontFamily="@font/museosans_300"
        android:text="your password should be have a minimum of 8 characters and contain at least
one number, one uppercase and one lowercase letter. Ypu can use Special Characters"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="284dp"
        android:layout_height="51dp"
        android:layout_marginTop="4dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="text"
        android:text="Email"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/repeatPassword"
        android:layout_width="284dp"
        android:layout_height="53dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="textPassword"
        android:text="password"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <TextView
        android:id="@+id/WarningBoarder"
        android:layout_width="271dp"
        android:layout_height="81dp"
        android:layout_marginBottom="8dp"
        android:background="#A32121"
        android:text="TextView"
        android:textColor="#A32121"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/WarningTextPass"
        android:layout_width="261dp"
        android:layout_height="74dp"
        android:layout_marginBottom="12dp"
        android:background="#000000"
        android:text=".      Email is Invalid Or              In use "
        android:textColor="#F40000"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/WarningTextEmail"
        android:layout_width="261dp"
        android:layout_height="74dp"
        android:layout_marginBottom="12dp"
        android:background="#000000"
        android:text=".      Passwords Invalid Or              don't Match "
        android:textColor="#F40000"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/redCross"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/WarningTextEmail"
        app:layout_constraintStart_toStartOf="@+id/WarningBoarder"
        app:layout_constraintTop_toTopOf="@+id/WarningBoarder"
        app:layout_constraintVertical_bias="0.058"
        app:srcCompat="@drawable/cross" />

</androidx.constraintlayout.widget.ConstraintLayout>